<% if current_user %>
    <h4>Add a comment:</h4>
  <%= form_for [topic, post, post.comments.new] do |f| %>
  <div class="form-group">
    <%= f.text_field :body, class: 'form-control' %>
  </div>
    <div class="form-group">
      <%= f.submit "Submit", class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>