
<% if current_user %>
  <h4>Add a comment:</h4>
  <div class="form-group">
  <%= form_for [@post, @post.comments.build] do |f| %>
    <%= f.text_field :body, class: 'form-control' %>
  </end>
  <br/>
  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>
<% end %>